---
import Layout from '../layouts/Layout.astro';
import UsdIcon from '../components/icons/UsdIcon.astro';
import PesoIcon from '../components/icons/PesoIcon.astro';
import BtcIcon from '../components/icons/BtcIcon.astro';
import Title from '../components/Title.astro';
import Footer from '../components/Footer.astro';
import { Graph } from '../components/Graph/Graph';
import Price from '../components/Price.astro';

import lastUpdateJson from '../last_update.json';


let {precio_usd_blue_compra, precio_usd_blue_venta, precio_usd_oficial_venta, precio_usd_oficial_compra, btc_price_usd, date} = lastUpdateJson;
const precioUsdBlueCompra = Number(precio_usd_blue_venta)
const precioUsdOficialCompra = Number(precio_usd_oficial_venta)
---


<Layout title="BitcoinDolarHoy">
	<div class="max-w-[1200px] mx-auto flex flex-col min-h-screen px-4 pt-16 h-full	sm:px-6 lg:px-8 lg:pt-20 justify-start">
		<Title />
		<section class="grid my-16 
				grid-cols-2 grid-rows-3 
				sm:grid-cols-2 sm:grid-rows-3 
				md:grid-cols-3 md:grid-rows-2 md:gap-x-0
				lg:grid-cols-3 lg:gap-y-0"
			>
				<Price col={1} row={1} spanText="" 											name='Peso'  price={1}><PesoIcon /></Price>
				<Price col={1} row={2} spanText="(Blue)" 								name='D贸lar' price={precioUsdBlueCompra}><UsdIcon/></Price>
				<Price col={1} row={3} spanText="(Oficial)" 						name='D贸lar' price={precioUsdOficialCompra}><UsdIcon/></Price>
				<Price col={2} row={1} spanText="(Dolares)" 						name='Bitcoin' price={btc_price_usd}> <BtcIcon/></Price>
				<Price col={2} row={2} spanText="(Pesos D贸lar Oficial)" name="Bitcoin" price={btc_price_usd * precioUsdOficialCompra}> <BtcIcon/></Price>
				<Price col={2} row={3} spanText="(Pesos D贸lar Blue)" 		name="Bitcoin"  price={btc_price_usd * precioUsdBlueCompra}><BtcIcon/></Price>
		</section>
		<Graph client:only="react" />
		<Footer date={date} />
	</div>
</Layout>